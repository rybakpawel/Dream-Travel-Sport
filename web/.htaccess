# Cache-Control headers for Dream Travel Sports

# HTML files - no cache (always fetch fresh)
<FilesMatch "\.(html|htm)$">
  Header set Cache-Control "no-cache, no-store, must-revalidate"
  Header set Pragma "no-cache"
  Header set Expires "0"
</FilesMatch>

# JavaScript and CSS files with hash in filename - long-term cache (1 year)
# These files have hashes in their names, so they can be cached indefinitely
<FilesMatch "\.(js|css)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Images with hash - long-term cache (1 year)
<FilesMatch "\.(jpg|jpeg|png|gif|svg|webp|ico|bmp|tiff)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Fonts with hash - long-term cache (1 year)
<FilesMatch "\.(woff|woff2|eot|ttf|otf)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# PDF files - medium cache (1 hour) - may be updated occasionally
<FilesMatch "\.(pdf)$">
  Header set Cache-Control "public, max-age=3600"
</FilesMatch>

# Other static assets - medium cache (1 day)
<FilesMatch "\.(xml|txt|json)$">
  Header set Cache-Control "public, max-age=86400"
</FilesMatch>
